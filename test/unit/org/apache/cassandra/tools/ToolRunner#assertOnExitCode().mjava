    public ToolRunner assertOnExitCode()
    {
        int code = getExitCode();
        if (code != 0)
            fail(String.format("%s%nexited with code %d%nstderr:%n%s%nstdout:%n%s",
                               argsToLogString(),
                               code,
                               getStderr(),
                               getStdout()));
        return this;
    }

