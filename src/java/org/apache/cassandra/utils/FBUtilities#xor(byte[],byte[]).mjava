     public static byte[] xor(byte[] b1, byte[] b2)
     {
         assert b1 != null;
         assert b2 != null;
    	 byte[] bLess;
    	 byte[] bMore;

    	 if(b1.length > b2.length)
    	 {
    		 bLess = b2;
    		 bMore = b1;
    	 }
    	 else
    	 {
    		 bLess = b1;
    		 bMore = b2;
    	 }

    	 for(int i = 0 ; i< bLess.length; i++ )
    	 {
    		 bMore[i] = (byte)(bMore[i] ^ bLess[i]);
    	 }

    	 return bMore;
     }

