    /**
     * Store a signed int at the given offset encoded as big endian
     */
    public static void putInt(byte[] b, int off, int val)
    {
        ensureCapacity(b, off, Integer.BYTES);
        b[off + 3] = (byte) (val       );
        b[off + 2] = (byte) (val >>>  8);
        b[off + 1] = (byte) (val >>> 16);
        b[off    ] = (byte) (val >>> 24);
    }

