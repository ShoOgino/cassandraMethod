        public void run()
        {
            try
            {
                currentSegment().write(rowMutation, serializedRow);
                // roll log if necessary
                if (currentSegment().length() >= SEGMENT_SIZE)
                {
                    sync();
                    segments.add(new CommitLogSegment());
                }
                else if (flushEachWrite)
                {
                    currentSegment().flush();
                }
            }
            catch (IOException e)
            {
                throw new IOError(e);
            }
        }

