	/**
	 * Puts an integer into the buffer as 4 bytes, big-endian.
	 */
	private void xdr_int(int i)
	{
		buffer_[offset_++] = (byte) ((i >> 24) & 0xff);
		buffer_[offset_++] = (byte) ((i >> 16) & 0xff);
		buffer_[offset_++] = (byte) ((i >> 8) & 0xff);
		buffer_[offset_++] = (byte) (i & 0xff);
	}

