    public String getJmxType()
    {
        switch (this)
        {
            case ANTIENTROPY:
            case GOSSIP:
            case MIGRATION:
            case MISC:
            case STREAM:
            case INTERNAL_RESPONSE:
                return "internal";
            case MUTATION:
            case READ:
            case REQUEST_RESPONSE:
                return "request";
            default:
                throw new AssertionError("Unknown stage " + this);
        }
    }

