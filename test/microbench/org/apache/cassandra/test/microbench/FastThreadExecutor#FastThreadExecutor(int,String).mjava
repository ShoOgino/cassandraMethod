    public FastThreadExecutor(int size, String name)
    {
        assert size == 1;

        thread = new FastThreadLocalThread(() -> {
            Runnable work = null;
            try
            {
                while ((work = queue.take()) != null)
                    work.run();
            }
            catch (InterruptedException e)
            {
                shutdown.countDown();
            }
        });

        thread.setName(name + "-1");
        thread.setDaemon(true);

        thread.start();
    }

