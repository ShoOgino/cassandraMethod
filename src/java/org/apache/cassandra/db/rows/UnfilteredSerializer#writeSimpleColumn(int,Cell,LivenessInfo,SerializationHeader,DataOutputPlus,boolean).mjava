    private void writeSimpleColumn(int idx, Cell cell, LivenessInfo rowLiveness, SerializationHeader header, DataOutputPlus out, boolean useSparse)
    throws IOException
    {
        if (useSparse)
        {
            if (cell == null)
                return;

            out.writeVInt(idx);
        }
        Cell.serializer.serialize(cell, out, rowLiveness, header);
    }

