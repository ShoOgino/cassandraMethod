    public static void writeName(byte[] name, DataOutput out)
    {
        int length = name.length;
        assert length <= IColumn.MAX_NAME_LENGTH;
        try
        {
            out.writeByte((length >> 8) & 0xFF);
            out.writeByte(length & 0xFF);
            out.write(name);
        }
        catch (IOException e)
        {
            throw new RuntimeException(e);
        }
    }

