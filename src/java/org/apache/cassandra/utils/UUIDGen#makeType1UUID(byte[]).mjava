    /** creates a type 1 uuid from raw bytes. */
    static UUID makeType1UUID(byte[] raw)
    {
        long most = 0;
        long least = 0;
        assert raw.length == 16;
        for (int i = 0; i < 8; i++)
            most = (most << 8) | (raw[i] & 0xff);
        for (int i =8 ; i < 16; i++)
            least = (least << 8) | (raw[i] & 0xff);
        return new UUID(most, least);
    }

