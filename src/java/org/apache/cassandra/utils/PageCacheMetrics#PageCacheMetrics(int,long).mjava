    public PageCacheMetrics(int pageSize, long fileLength)
    {
        assert pageSize > 0;
        assert fileLength > 0;

        this.pageSize = pageSize;
        this.fileLength = fileLength;

        long numPages = (fileLength + pageSize - 1) / pageSize;
        pageMap = new OpenBitSet(numPages);

        assert isEmpty();
    }

