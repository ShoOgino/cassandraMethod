    private static char[] createRegexWordDomain()
    {
        // \w == [a-zA-Z_0-9]
        char[] domain = new char[26 * 2 + 10 + 1];

        int offset = 0;
        // _
        domain[offset++] = (char) 95;
        // 0-9
        for (int c = 48; c < 58; c++)
            domain[offset++] = (char) c;
        // A-Z
        for (int c = 65; c < 91; c++)
            domain[offset++] = (char) c;
        // a-z
        for (int c = 97; c < 123; c++)
            domain[offset++] = (char) c;
        return domain;
    }

