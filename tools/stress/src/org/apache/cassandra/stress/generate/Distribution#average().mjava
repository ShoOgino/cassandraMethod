    // approximation of the average; slightly costly to calculate, so should not be invoked frequently
    public long average()
    {
        double sum = 0;
        int count = 0;
        for (float d = 0 ; d <= 1.0d ; d += 0.02d)
        {
            sum += inverseCumProb(d);
            count += 1;
        }
        return (long) (sum / count);
    }

