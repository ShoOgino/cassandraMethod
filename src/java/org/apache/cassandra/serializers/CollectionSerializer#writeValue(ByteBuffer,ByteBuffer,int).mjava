    protected static void writeValue(ByteBuffer output, ByteBuffer value, int version)
    {
        if (version >= Server.VERSION_3)
        {
            if (value == null)
            {
                output.putInt(-1);
                return;
            }

            output.putInt(value.remaining());
            output.put(value.duplicate());
        }
        else
        {
            assert value != null;
            output.putShort((short)value.remaining());
            output.put(value.duplicate());
        }
    }

