    @Test
    public void constantSize() throws IOException
    {
        CommitLogHeader clh = new CommitLogHeader();
        clh.turnOn(2, 34);
        byte[] one = clh.toByteArray();
        
        clh = new CommitLogHeader();
        for (int i = 0; i < 5; i++)
            clh.turnOn(i, 1000 * i);
        byte[] two = clh.toByteArray();
        
        assert one.length == two.length;
    }

