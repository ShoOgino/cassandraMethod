    private static Throwable runAndMergeThrowable(Throwable existing, ThrowingRunnable ... runnables)
    {
        for (ThrowingRunnable runnable : runnables)
        {
            try
            {
                runnable.run();
            }
            catch (Throwable t)
            {
                existing = Throwables.merge(existing, t);
            }
        }
        return existing;
    }

