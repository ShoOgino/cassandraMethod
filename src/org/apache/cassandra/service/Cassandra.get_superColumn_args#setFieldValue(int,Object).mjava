    public void setFieldValue(int fieldID, Object value) {
      switch (fieldID) {
      case TABLENAME:
        setTablename((String)value);
        break;

      case KEY:
        setKey((String)value);
        break;

      case COLUMNFAMILY:
        setColumnFamily((String)value);
        break;

      default:
        throw new IllegalArgumentException("Field " + fieldID + " doesn't exist!");
      }
    }

