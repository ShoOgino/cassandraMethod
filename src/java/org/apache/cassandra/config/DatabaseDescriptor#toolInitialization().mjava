    public static void toolInitialization()
    {
        assert !daemonInitialized;
        assert !clientInitialized;

        if (toolInitialized)
            return;
        toolInitialized = true;

        Config.setToolsMode(true);

        setConfig(loadConfig());

        applySimpleConfig();

        applyPartitioner();

        applySnitch();

        applyEncryptionContext();
    }

