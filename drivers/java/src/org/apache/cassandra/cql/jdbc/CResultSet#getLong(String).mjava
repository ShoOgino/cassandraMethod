    /**
     * @param name
     * @return
     * @throws SQLException
     */
    public long getLong(String name) throws SQLException
    {
        String nameAsString = decoder.colNameAsString(keyspace, columnFamily, name);
        Object value = valueMap.get(nameAsString);
        wasNull = value == null;
        return value == null ? 0 : (Long) value;
    }

