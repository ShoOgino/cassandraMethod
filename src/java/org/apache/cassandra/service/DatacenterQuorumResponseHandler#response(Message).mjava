    @Override
    public void response(Message message)
    {
        if (condition_.isSignaled())
        {
            return;
        }

        if (waitList.contains(message.getFrom()))
        {
            blockFor--;
        }
        responses_.add(message);
        // If done then the response count will be empty after removing
        // everything.
        if (blockFor <= 0)
        {
            condition_.signal();
        }
    }

