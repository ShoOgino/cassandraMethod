        public void awaitUninterruptibly()
        {
            assert !isCancelled();
            if (thread != Thread.currentThread())
                throw new IllegalStateException();
            boolean interrupted = false;
            while (!isSignalled())
            {
                if (Thread.interrupted())
                    interrupted = true;
                LockSupport.park();
            }
            if (interrupted)
                thread.interrupt();
        }

