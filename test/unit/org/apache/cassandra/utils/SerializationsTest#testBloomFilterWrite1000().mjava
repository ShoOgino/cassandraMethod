        {
            for (int i = 0; i < 1000; i++)
                bf.add(Util.dk(Int32Type.instance.decompose(i)));
            try (DataOutputStreamPlus out = getOutput("3.0", "utils.BloomFilter1000.bin"))
            {
                FilterFactory.serialize(bf, out);
            }
        }
    }

