    public static Map<ByteBuffer, ColumnDef> toMap(List<ColumnDef> columnDefs)
    {
        Map<ByteBuffer, ColumnDef> map = new HashMap<ByteBuffer, ColumnDef>();

        if (columnDefs == null)
            return map;

        for (ColumnDef columnDef : columnDefs)
            map.put(columnDef.name, columnDef);

        return map;
    }

