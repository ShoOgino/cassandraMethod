    public static boolean matchesBitmask(byte[] bitmask, byte[] name)
    {
        assert name != null;
        assert bitmask != null;

        int len = Math.min(bitmask.length, name.length);

        for (int i = 0; i < len; i++)
        {
            if ((bitmask[i] & name[i]) == 0)
            {
                return false;
            }
        }

        return true;
    }

