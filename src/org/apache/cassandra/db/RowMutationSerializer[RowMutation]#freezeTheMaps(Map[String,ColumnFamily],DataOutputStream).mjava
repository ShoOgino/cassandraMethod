	private void freezeTheMaps(Map<String, ColumnFamily> map, DataOutputStream dos) throws IOException
	{
		int size = map.size();
        dos.writeInt(size);
        if ( size > 0 )
        {
            Set<String> keys = map.keySet();
            for( String key : keys )
            {
            	dos.writeUTF(key);
                ColumnFamily cf = map.get(key);
                if ( cf != null )
                {
                    ColumnFamily.serializer().serialize(cf, dos);
                }
            }
        }
	}

