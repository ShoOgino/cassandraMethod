    /**
     * @param sstable SSTable to scan.
     */
    SSTableScanner(SSTableReader sstable, boolean skipCache)
    {
        try
        {
            this.dfile = sstable.openDataReader(skipCache);
            this.ifile = sstable.openIndexReader(skipCache);
        }
        catch (IOException e)
        {
            sstable.markSuspect();
            throw new IOError(e);
        }
        this.sstable = sstable;
        this.filter = null;
    }

