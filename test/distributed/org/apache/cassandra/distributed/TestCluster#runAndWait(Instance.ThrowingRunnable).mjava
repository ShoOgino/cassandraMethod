    public void runAndWait(Instance.ThrowingRunnable runnable)
    {
        try
        {
            exec.submit(() -> {
                try
                {
                    runnable.run();
                }
                catch (Throwable throwable)
                {
                    Throwables.maybeFail(throwable);
                }
            }).get();
        }
        catch (Exception e)
        {
            Throwables.maybeFail(e.getCause());
        }
    }

