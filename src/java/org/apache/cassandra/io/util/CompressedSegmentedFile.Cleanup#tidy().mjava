        public void tidy()
        {
            Throwable err = regions == null ? null : regions.close(null);
            if (err != null)
            {
                JVMStabilityInspector.inspectThrowable(err);

                // This is not supposed to happen
                logger.error("Error while closing mmapped regions", err);
            }

            metadata.close();

            super.tidy();
        }

