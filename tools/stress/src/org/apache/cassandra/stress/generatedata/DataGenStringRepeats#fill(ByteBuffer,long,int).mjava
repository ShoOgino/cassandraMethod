    private void fill(ByteBuffer fill, long index, int column)
    {
        fill.clear();
        byte[] trg = fill.array();
        byte[] src = getData(index, column);
        for (int j = 0 ; j < trg.length ; j += src.length)
            System.arraycopy(src, 0, trg, j, Math.min(src.length, trg.length - j));
    }

