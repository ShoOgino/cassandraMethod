    /**
     * Get the typed value, serialized to a byte[].
     * 
     * @return
     */
    public byte[] getBytes()
    {
        switch (type)
        {
            case STRING:
                return text.getBytes();
            case LONG:
                return FBUtilities.toByteArray(Long.parseLong(text));
        }
        
        // FIXME: handle scenario that should never happen
        return null;
    }

