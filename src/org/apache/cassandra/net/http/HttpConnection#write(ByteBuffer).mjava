    public void write(ByteBuffer buffer)
    {
        /*
         * TODO: Make this a non blocking write.
        */
        try
        {
            while ( buffer.remaining() > 0 )
            {
                httpChannel_.write(buffer);
            }
            close();
        }
        catch ( IOException ex )
        {
            logger_.warn(LogUtil.throwableToString(ex));
        }
    }

