    public ViewMetadata withAlteredColumnType(ColumnIdentifier name, AbstractType<?> type)
    {
        return new ViewMetadata(keyspace,
                                this.name,
                                baseTableId,
                                baseTableName,
                                includeAllColumns,
                                select,
                                whereClause,
                                metadata.unbuild().alterColumnType(name, type).build());
    }

