    /**
     * Should only be called by ColumnFamilyStore.apply.  NOT a public API.
    */
    void put(DecoratedKey key, ColumnFamily columnFamily)
    {
        try
        {
            activeWriters.incrementAndGet();
            resolve(key, columnFamily);
        }
        finally
        {
            activeWriters.decrementAndGet();
        }
    }

