    public static void deleteAsync(final String file) throws IOException
    {
        Runnable deleter = new Runnable()
        {
            public void run()
            {
                try
                {
                    FileUtils.deleteWithConfirm(new File(file));
                }
                catch (IOException e)
                {
                    throw new RuntimeException(e);
                }
            }
        };
        executor.submit(deleter);
    }

